{
  "name": "cashflow-app",
  "private": true,
  "version": "0.0.0",
  "author": "Brandon Crisp",
  "description": "App to be used along side the Cash Flow board game",
  "main": "./dist/main/main.js",
  "scripts": {
    "dev": "electron-vite dev -w --outDir=dist",
    "build": "electron-vite build --outDir=dist",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "electron-vite preview --outDir=dist",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-windows": "electron-builder --ia32 --x64 -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "crispy.code.com",
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extends": null
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@reduxjs/toolkit": "^2.2.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "lucide-react": "^0.378.0",
    "react": "^18.2.0",
    "react-animated-counter": "^1.7.8",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.4",
    "react-redux": "^9.1.2",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^20.12.8",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron": "^30.0.3",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "electron-vite": "^2.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0"
  }
}
